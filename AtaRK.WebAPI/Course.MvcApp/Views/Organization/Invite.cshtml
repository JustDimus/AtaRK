@model Course.MvcApp.Models.MvcModels.CreateInviteModel

@{
    ViewData["Title"] = "Invite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Invite</h1>

<h4>Please, enter email address of whom you would like to invite.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Invite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="GroupId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Invite user" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
